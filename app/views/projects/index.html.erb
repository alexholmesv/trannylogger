<p id="notice"><%= notice %></p>

<div class="container">
<h1>Translation Projects</h1>

<div class="margin-logo pull-right">
<%= link_to " New Project", new_project_path, class:"btn btn-primary"%>
</div>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Traductor</th>
      <th>Name</th>
      <th>Date received</th>
      <th>Words</th>
      <th>Rate</th>
      <th>Extras</th>
      <th>Total</th>
      <th>Â¿Enviado?</th>
      <th>Boleta/Factura</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-striped table-hover">
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.client.name %> </td>
        <td><% if !project.translator.nil? %>
        <%= project.translator.name %>
        <% end %></td>  
        <td><%= project.name %></td>
        <td><%= project.date_received %></td>
        <td><%= project.words %></td>
        <td><%= number_to_currency(project.rate, precision:0) %></td>
        <td><%= number_to_currency(project.extras, precision:0) %></td>
        <td><%= number_to_currency(project.total, precision:0) %></td>
        <td class="icon-center"> <%= show_sent_icon(project) %></td>
        <td><%= project.invoice_number %></td>
        <td>
            <%= link_to project do %>
               <div class="fa fa-eye fa-2x"></div>
            <% end %>
       
         </td>
        <td>
          <%= link_to edit_project_path(project) do%>
            <div class="fa fa-pencil-square-o fa-2x"></div> 
            <% end %>
            </td>
        <td>
            <%= link_to project, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <div class="fa fa-trash fa-2x"></div>
            <% end %>
         </td>
       
    <% end %>
  </tbody>
</table>

</div>

